<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#252A3D"/> <!-- Color oscuro al presionar -->
            <corners android:radius="9dp"/> <!-- Bordes redondeados -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2B3044"/> <!-- Color de fondo normal -->
            <corners android:radius="9dp"/>
            <shadowColor android:color="#2B3044"/>
            <padding android:top="12dp" android:bottom="12dp" android:left="24dp" android:right="24dp"/>
        </shape>
    </item>
</selector>
